<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:micro="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             x:Class="Drive_Manager.MainPage"
             Shell.TitleColor="LightGray"
             Shell.BackgroundColor="#1c1c1c">

    <Grid ColumnDefinitions="0.6*, 0.4*" BackgroundColor="#1c1c1c">
        
        <!-- Drives -->
        <VerticalStackLayout Padding="20, 20" Spacing="10" Grid.Column="0" HorizontalOptions="Center">
            <Label Grid.Row="1" Grid.Column="1" Text="Drives:" FontSize="14" TextColor="LightGrey"/>

            <CollectionView x:Name="collectionView" Grid.Row="2" Grid.Column="1" >
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="0,8">
                            <Frame Background="#1F1F1F" HeightRequest="38" Padding="20, 5">

                                <Label Text="{Binding ItemLabel}" FontSize="15" TextColor="LightGrey"  FontAttributes="Bold"/>
                            
                            </Frame>
                            <Button BackgroundColor="#00FFFFFF" BorderColor="Yellow" BorderWidth="1" x:Name="detailViewButton"
                                    Command="{Binding detailedViewButtonClicked}"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>

        <!-- Collective drive information -->
        <VerticalStackLayout Padding="5, 5" Spacing="10" Grid.Column="1" HorizontalOptions="Center">
            <micro:ChartView x:Name="chartView" HeightRequest="300" WidthRequest="400"/>

        </VerticalStackLayout>
    </Grid>

</ContentPage>
   